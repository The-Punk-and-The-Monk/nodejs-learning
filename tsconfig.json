{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es2018",
        "module": "commonjs",
        "outDir": "dist",
        "noImplicitAny": true,
        "sourceMap": true,
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
